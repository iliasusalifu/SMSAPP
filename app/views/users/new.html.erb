<%# render 'form' %>

<%# link_to 'Back', users_path %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<section style="height: 1714px" class="column" id="main">
    
    <article style="float: right; width: 66%" class="module width_quarter">
       <header style="text-align: center">
           <h3>SIGN UP</h3>
       </header>
       <div class="message_list" style="height: 370px">
             <div class="module_content" >
                   
                  <%= form_for @user, :html => {:class => 'post_message'} do |f| %>
                     <fieldset class="<%= error_field?(@user,'name') %>">
                         <label>Username</label> <%= f.text_field 'name' %><br />
                     </fieldset>
										 <fieldset class="<%= error_field?(@user,'email') %>">
                         <label>Email</label> <%= f.text_field 'email' %><br />
                     </fieldset>
                     <fieldset class="<%= error_field?(@user,'password') %>">
                    	   <label>Password</label><%= f.password_field 'password' %><br />
  									 </fieldset>
                     <fieldset class="<%= error_field?(@user,'password','doesn\'t match confirmation') %>">
                         <label>Password confirmation</label> <%= f.password_field 'password_confirmation' %><br />
                     </fieldset>
                       <%= f.submit 'Submit' %>
									<% end %>             
               Click here to <strong><%= link_to 'log on', login_path %></strong>
             </div>
             
       </div>
    </article>
  </section>

	

